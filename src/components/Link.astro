---
import Tag from './Tag.astro';

const { link } = Astro.props;
const date = new Date(link.date);
---

<div class="relative w-full px-8 py-5 bg-white shadow-lg rounded-2xl">
    <div class="w-full">
      <div class="divide-y divide-grey-700">
        <div class="pb-2">
          <h1 class="text-xl font-semibold cursor-pointer text-blue-800 transition hover:text-opacity-80">
            <a href="{link.link}" target="_blank">{link.title} --></a>
          </h1>
        </div>
        <div class="py-2">
          <p class="text-base space-y-4 text-gray-700">{link.astro.source}</p>
          <div class="flex justify-between items-center pt-1">
            <p class="text-base text-gray-500 flex-shrink-0 mr-4 hidden sm:inline">{date.toLocaleString()}</p>
            <p class="text-base text-gray-500 flex-shrink-0 mr-4 sm:hidden">{date.toLocaleDateString()}</p>
            <div class="flex flex-wrap">
              {link.tags.map((tag) => (
                <Tag tag={tag} />
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
